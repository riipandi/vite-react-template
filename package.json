{
    "name": "vite-react-template",
    "private": true,
    "version": "0.2.0",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "preinstall": "pnpm dlx only-allow pnpm",
        "pre-commit": "sh .husky/pre-commit",
        "prepare": "husky || true",
        "update-deps": "npm-check-updates --configFileName .ncurc.json",
        "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\" --log-level warn",
        "lint": "eslint \"**/*.{ts,tsx}\" --fix",
        "storybook": "storybook dev -p 4400 --no-open --disable-telemetry",
        "build:storybook": "storybook build --disable-telemetry",
        "test": "vitest --run",
        "test:ui": "vitest --ui"
    },
    "dependencies": {
        "gotrue-js": "^0.9.29",
        "lucide-react": "^0.321.0",
        "react": "^18.2.0",
        "react-aria": "^3.31.1",
        "react-aria-components": "^1.0.1",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.50.0",
        "react-router-dom": "^6.22.0",
        "undici": "^6.6.0"
    },
    "devDependencies": {
        "@egoist/tailwindcss-icons": "^1.7.4",
        "@iconify-json/lucide": "^1.1.162",
        "@storybook/addon-essentials": "^7.6.12",
        "@storybook/addon-interactions": "^7.6.12",
        "@storybook/addon-links": "^7.6.12",
        "@storybook/addon-onboarding": "^1.0.11",
        "@storybook/blocks": "^7.6.12",
        "@storybook/react": "^7.6.12",
        "@storybook/react-vite": "^7.6.12",
        "@storybook/testing-library": "^0.2.2",
        "@storybook/theming": "^7.6.12",
        "@tailwindcss/aspect-ratio": "^0.4.2",
        "@tailwindcss/forms": "^0.5.7",
        "@tailwindcss/typography": "^0.5.10",
        "@testing-library/react": "^14.2.1",
        "@types/node": "^20.11.16",
        "@types/react": "^18.2.51",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^1.2.2",
        "autoprefixer": "^10.4.17",
        "clsx": "^2.1.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-prettier": "^5.1.3",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-simple-import-sort": "^10.0.0",
        "eslint-plugin-tailwindcss": "^3.14.1",
        "husky": "^9.0.10",
        "jsdom": "^24.0.0",
        "npm-check-updates": "^16.14.14",
        "postcss": "^8.4.33",
        "prettier": "^3.2.4",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "storybook": "^7.6.12",
        "tailwind-merge": "^2.2.1",
        "tailwind-scrollbar-hide": "^1.1.7",
        "tailwind-variants": "^0.1.20",
        "tailwindcss": "^3.4.1",
        "tailwindcss-animate": "^1.0.7",
        "tailwindcss-debug-screens": "^2.2.1",
        "tailwindcss-react-aria-components": "^1.0.0",
        "typescript": "5.1.6",
        "vite": "^5.0.12",
        "vite-tsconfig-paths": "^4.3.1",
        "vitest": "^1.2.2"
    },
    "prettier": {
        "jsxSingleQuote": true,
        "printWidth": 100,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "es5",
        "useTabs": false,
        "plugins": [
            "prettier-plugin-tailwindcss"
        ]
    }
}
